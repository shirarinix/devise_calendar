<% if signed_in? %>
  <%#= ヘッダーを表示 %>
  <%= render 'event_header' %>
  <ul class="lists-var">
    <li class="list"><%#= ユーザーのリストを表示 %>
      <%= render 'users/user_list' %>
    </li>
    <li class="list"><%#= アーティストのリストを表示 %>
      <%= render 'artists/artist_list' %>
    </li>
  </ul>
<%#= イベントの表示 %>
<div class="schedule-title">🔻 スケジュールの管理 🔻</div>
  <div class="month-event">⭐️ 今月のイベント ⭐️</div>
<ul class="event-info">
  <div class="event-btn-text">イベント作成</div>
    <%= link_to "/events/new" do %>
      <i class="fas fa-flag-checkered fa-5x"></i>
    <% end %>
  <div class="push-btn">PUSH</div>
  <table>
    <thead>
      <tr>
        <th>『ユーザー名』</th>
        <th>『イベントタイトル』</th>
        <th>『開催日（時間）』</th>
        <th colspan="3">『詳細一覧』</th>
      </tr>
    </thead>
    <% if current_user %>
      <% @user_events.each do |event| %>
        <tbody>
          <tr><%#= ユーザーのイベントを表示 %>
            <td><%= "#{event.user.nickname}さん" %></td>
            <td><%= "🚩#{event.title}" %></td>
            <td><%= event.start_time.strftime("%Y-%m-%d %H:%M ~ ") %></td>
            <td><%= link_to "→詳細ページへ", event_path(event) %></td>
          </tr>
        </tbody>
      <% end %>
    <% else %>
      <% @artist_events.each do |event| %>
        <tbody>
          <tr><%#= アーティストのイベントを表示 %>
            <td><%= "#{event.artist.artistname}さん" %></td>
            <td><%= " 🚩 #{event.title}" %></td>
            <td><%= event.start_time.strftime("%Y-%m-%d %H:%M ~ ") %></td>
            <td><%= link_to "→詳細ページへ", event_path(event) %></td>
          </tr>
        </tbody>
      <% end %>
    <% end %>
  </table>
</ul>
<% end %>
<%#= カレンダーの表示 %>
<% if signed_in? && current_user %>
  <%= render 'simple_calendar/user_events_calendar' %>
<% elsif current_artist %>
  <%= render 'simple_calendar/artist_events_calendar' %>
<% else %>
  <div class="app-title"> ☆ bookmark_calendar ☆ </div>
  <%= render 'event_header' %>
  <div class="attention_var">※※※ イベント・カレンダーの作成には<span class="attention_point">新規登録/ログイン</span>が必要です ※※※</div>
  <%= render 'simple_calendar/top_calendar' %>
<% end %>
