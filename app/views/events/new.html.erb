<%# ヘッダー部分 %>
  <%= render 'event_header' %>
<%# エラーメッセージの出力 %>
  <%= render 'events/error_messages' %>
<%# イベント作成フォーム %>
<div class="event-form">
<%= form_with(model: @event, local: true) do |f| %>
  <div class="event-new">イベント作成画面</div>
<%# event-title %>
<ul class="event-field">
  <ul class="event-text">
    <li><i class="fas fa-flag"></i></li>
    <li><%= f.text_field :title, class:"event-title", placeholder:"【 titleを入力 】", autofocus: true %></li>
  </ul>
</ul>
<%# date/time %>
<ul class="event-field">
  <ul class="event-text">
    <li><i class="fas fa-calendar-check"></i></li>
    <li><%= f.datetime_field :start_time, class:"datetime", placeholder:"【 date/timeを入力 】", autofocus: true %></li>
  </ul>
</ul>
<%# content %>
<ul class="event-field">
  <ul class="event-text">
    <li><i class="fas fa-pencil-alt"></i></li>
    <li><%= f.text_area :content, class:"content", placeholder:"【 contentsを入力 】", rows: "7" %></li>
  </ul>
</ul>
<%# 作成ボタン %>
  <ul class="event-btn">
    <li><%= f.submit "作成する", class:"create-btn" %>
<%# 戻るボタン %>
    <li class="event-return"><%= link_to 'トップへ戻る', root_path, class:"event-return-submit" %></li>
  </ul>
<% end %>
</div>
<%#= カレンダーを表示 %>
<%= render 'simple_calendar/toppage_calendar' %>