<h1>編集画面</h1>

<p id="notice"><%= notice %></p>

<%= form_with(model: @event, local: true) do |f| %>

  <div class="title">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="time">
    <%= f.label :start_time %>
    <%= f.datetime_select :start_time %>
  </div>

  <div class="content">
    <%= f.label :content %>
    <%= f.text_field :content %>
  </div>


  <div class="submit">
    <%= f.submit %>
  </div>

<% end %>