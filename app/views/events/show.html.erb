<% if current_user %>
  [ログイン者]<%= current_user.nickname %><br>
<% else %>
  [ログイン者]<%= current_artist.artistname %><br>
<% end %>

<h1>詳細画面</h1>
  <p id="notice"><%= notice %></p>
<p>
  <strong>【タイトル】</strong>
  <%= @event.title %>
</p>
<p>
  <strong>【開催日（時間）】</strong>
  <%= @event.start_time.strftime ("%m/%d %H:%M ~") %>
</p>
<p>
  <strong>【イベント内容】</strong>
  <%= @event.content %>
</p>

<%# if @event.user_id? %>
  <%= render 'event_footer' %>
<%# else %>
  <%#= render 'event_footer' %>
<%# end %>