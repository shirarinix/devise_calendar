<% if user_signed_in? && current_user %>
  [ログイン者]<%= current_user.nickname %><br>
<% else %>
  [ログイン者]<%= current_artist.artistname %><br>
<% end %>

<% if signed_in? && current_user %>
<h1>詳細画面</h1>
  <p id="notice"><%= notice %></p>
  <p>
    <strong>【タイトル】</strong>
    <%= @event.title %>
  </p>
  <p>
    <strong>【開催日（時間）】</strong>
    <%= @event.start_time.strftime ("%Y-%m-%d %H:%M ~") %>
  </p>
  <p>
    <strong>【イベント内容】</strong>
    <%= @event.content %>
  </p>
  <% if @event.user_id? %>
    <%= link_to '★このイベントを編集する★', edit_event_path(@event) %><br>
    <%= link_to '★新しくイベントを作成する★', new_event_path(@event) %><br>
    <%= link_to '★このイベントを削除する★', event_path(@event), method: :delete, data: { confirm: '本当に削除してよろしいですか？？' } %><br>
    <%= link_to '← トップへ戻る', root_path %><br>
    <%= render 'events/user_events_calender' %>
  <% else %>
    <strong><p>※※※ このイベントの編集は本人しか変更出来ません！！ ※※※</p></strong>
    <%= link_to '← トップへ戻る', root_path %><br>
    <%= render 'events/artist_events_calender' %>
  <% end %>
<% else %>
  <strong><p>※※※ このイベントの編集は本人しか変更出来ません！！ ※※※</p></strong>
  <%= link_to '← トップへ戻る', root_path %>
<% end %>