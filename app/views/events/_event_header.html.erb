<%# ヘッダー %>
<header class="event-header">
<% if signed_in? %>
  <%= render 'events/event_login_var' %>
<% else %>
  <div class="sample">
    <%= image_tag 'top_image.jpg' %>
    <div class="top-title">
      <i class="far fa-calendar-alt"></i> bookmark_calendar <i class="far fa-calendar-alt"></i>
    </div>
    <ul class="sign-in-form">
      <div class="user-sign-in">☆ユーザー サインイン☆
        <li class="signup-btn"><%= link_to "新規登録", new_user_registration_path, class: "sign-up" %></li>
        <li class="login-btn"><%= link_to 'ログイン', new_user_session_path, class: "log-in" %></li>
      </div>
      <div class="artist-sign-in">♫アーティスト サインイン♫
        <li class="signup-btn"><%= link_to "新規登録", new_artist_registration_path, class: "sign-up" %></li>
        <li class="login-btn"><%= link_to "ログイン", new_artist_session_path, class: "log-in" %></li>
      </div>
    </ul>
  </div>
    <div class="attention-var">※※※ イベント・カレンダーの作成には<span class="attention-point">新規登録/ログイン</span>が必要です ※※※</div>
  <div class="calendar-title">🔻 今月のカレンダー 🔻</div>
<% end %>
