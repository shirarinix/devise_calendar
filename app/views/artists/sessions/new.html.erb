<%# タイトル %>
<div class="app-title">
  <i class="far fa-calendar-alt"></i> bookmark_calendar <i class="far fa-calendar-alt"></i>
</div>
<%# アーティストのログインのフォーム %>
<div class="artist-login-form">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="artist-log-in">ログイン【アーティスト会員】</div>
<%# e-mail %>
  <div class="form-text">【e-mail】</div>
  <li class="artist-field">
    <i class="fas fa-envelope-square fa-fw" aria-hidden="true"></i>
    <%= f.email_field :email, class:"user-email", placeholder:"【PC・携帯どちらかを入力】", autofocus: true %>
  </li>
<%# password %>
  <div class="form-text">【password】</div>
  <li class="artist-field">
    <i class="fa fa-lock fa-fw" aria-hidden="true"></i>
    <%= f.password_field :password, class:"user-password", placeholder:"【6文字以上・半角英数字で入力】", autofocus: true %>
  </li>
  <% if devise_mapping.rememberable? %>
    <div class="field">
      <% f.check_box :remember_me %>
      <% f.label :remember_me %>
    </div>
  <% end %>
<%# 送信ボタン %>
  <ul class="login-actions">
    <li><%= f.submit "ログイン", class:"login-submit" %></li>
<% end %>
<%# 戻るボタン %>
    <li><% render "artists/shared/links" %></li>
    <li class="login-return"><%= link_to '戻る', root_path, class:"login-return-submit" %></li>
  </ul>
</div>