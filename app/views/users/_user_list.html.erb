<%#= ユーザーリストを表示 %>
<ul class="user-lists">【ファン会員】
  <% if current_user %>
    <%= link_to "プロフィール編集へ", edit_user_registration_path(@users), class: "profile-edit", method: :get %>
  <% end %>
  <% @users.each do |user| %>
    <li class="user-list" >
      <% if user.user_image.attached? %>
        <%= image_tag user.user_image, size:"50", class: "user-icon" %>
      <% else %>
        <i class="far fa-grin-alt fa-3x"></i>
      <% end %>
        <%= button_to "#{user.nickname}さんのページ", user_path(user), method: :get, class: "user-path" %>
    </li>
  <% end %>
</ul>
