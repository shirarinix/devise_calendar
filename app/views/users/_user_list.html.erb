<%#= ユーザーリストを表示 %>
<ul class="user-lists">【ユーザー一覧】
  <% @users.each do |user| %>
    <li class="user-list" >
      <% if user.user_image.attached? %>
        <%= image_tag user.user_image, size:"50", class: "user-icon" %>
      <% else %>
        <i class="far fa-grin-alt fa-3x"></i>
      <% end %>
      <%= link_to "※#{user.nickname}さんのページへ※", user_path(user), class: "user-path" %>
    </li>
  <% end %>
</ul>