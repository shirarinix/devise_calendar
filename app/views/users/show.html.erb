<%# ヘッダー部分 %>
  <%= render 'events/event_header' %>
<%# ユーザーの表示 %>
<ul class="user-form">
  <div class="user-info">
    <li class="user-list">
      <% if @user.user_image.attached? %>
        <%= image_tag @user.user_image, size:'75', class:"user-icon" %>
      <% else %>
        <i class="far fa-grin-alt fa-3x"></i>
      <% end %>
      <div class="name"><%= "#{@user.nickname}さんのページ" %></div>
    </li>
    <li class="follow-lists">
      <%= render 'bookmarks/user_follow_form', user: @user %>
    </li>
  </div>
<%# プロフィールの表示 %>
  <ul class="profile-lists">
    <div class="profile-title">★ profile ★</div>
    <li class="profile-list">
      <div class="profile-text">
        <%= "gender 🚻" %>
      </div>
      <div class="profile-sex">
        <% if @user.sex == "man" %>
          <%= "男性" %>
        <% else %>
          <%= "女性" %>
        <% end %>
      </div>
    </li>
    <li class="profile-list">
      <div class="profile-text">
        <%= "birthday 🎂" %>
      </div>
      <div class="profile-birthday">
        <%= @user.birthday.strftime("%Y年 %m月 %d日") %>
      </div>
    </li>
    <li class="profile-list">
      <div class="profile-text">
        <%= "hobby 🎪" %>
      </div>
      <div class="profile-hobby">
        <% if @user.hobby.present? %>
          <%= @user.hobby %>
        <% else %>
          <%= "探索中....." %>
        <% end %>
      </div>
    </li>
  </ul>
</ul>
<%# カレンダーの表示 %>
<div class="calendar-title"><%= "🔻 #{@user.nickname}さんのカレンダー 🔻" %></div>
<%= render 'simple_calendar/events_calendar' %>