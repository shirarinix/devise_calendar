<%# ヘッダー部分 %>
  <%= render 'events/event_header' %>
<%# ユーザーの表示 %>
<ul class="user-form">
  <div class="user-info">
    <li class="user-list">
      <% if @user.user_image.attached? %>
        <%= image_tag @user.user_image, size:'75', class:"user-icon" %>
      <% else %>
        <i class="far fa-grin-alt fa-3x"></i>
      <% end %>
      <div class="name"><%= "#{@user.nickname}さんのページ" %></div>
    </li>
    <li class="follow-lists">
      <%= render 'bookmarks/user_follow_form', user: @user %>
    </li>
  </div>
<%# プロフィールの表示 %>
  <ul class="profile-lists">
    <div class="profile-title">★ profile ★</div>
    <li class="profile-list">gender 🚻
      <div class="profile"></div>
      <div class="profile"><%= @user.sex %></div>
    </li>
    <li class="profile-list">birthday 🎂
      <div class="profile"><%= @user.birthday.strftime("%Y年 %m月 %d日") %></div>
    </li>
    <li class="profile-list">e-mail 📩
      <div class="profile"><%= @user.email %></div>
    </li>
  </ul>
</ul>
<%# カレンダーの表示 %>
<%= render 'simple_calendar/events_calendar' %>