<% if current_user.present? %>
  <%= current_user.nickname %>
<% else %>
  <%= current_artist.artistname %>
<% end %><br>
<br>
  ☆<%= @user.nickname %>さんのMyページ！！
<br>

<% if current_user.present? %>
<div id="follow_form">
  <% unless current_user?(@user) %>
    <% if current_user.following?(@user) %>
      <%= render 'unfollow' %>
    <% else %>
      <%= render 'follow' %>
    <% end %>
  <% end %>
</div>
  <a href="<%= following_user_path(@user) %>">
    <%= (@user.followings.count + @user.artist_followings.count) %>
    フォロー(user)/
  </a>
  <a href="<%= follower_user_path(@user) %>">
    <%= (@user.artist_followers.count + @artist.user_followed_ids.count) %>
    フォロワー(user)
  </a>
<br>
  ⑴.<%= @user.followings.count %>
  ⑵.<%= @user.artist_followings.select("following_id").count %>
  ⑶.<%= @user.artist_followers.count %>
  ⑷.<%= @artist.user_followed_ids.select("artist_followed_id").count %>
<% else %>
<div id="follow_form">
  <% unless current_artist?(@user) %>
    <% if current_artist.user_following?(@user) %>
      <%= render 'unfollow' %>
    <% else %>
      <%= render 'follow' %>
    <% end %>
  <% end %>
</div>
  <a href="<%= following_user_path(@user) %>">
    <%= (@user.followings.count + @user.artist_followings.count) %>
  フォロー(user)/
  </a>
  <a href="<%= follower_user_path(@user) %>">
    <%= (@user.artist_followers.count + @artist.user_followed_ids.count) %>
  フォロワー(user)
  </a>
<br>
  ⑴.<%= @user.followings.count %>
  ⑵.<%= @user.artist_followings.select("following_id").count %>
  ⑶.<%= @user.artist_followers.count %>
  ⑷.<%= @artist.user_followed_ids.select("artist_followed_id").count %>
<% end %>

