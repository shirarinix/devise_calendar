[ログイン者]
<% if current_user.present? %>
  <%= current_user.nickname %>
<% else %>
  <%= current_artist.artistname %>
<% end %><br>
<br>
  ☆<%= @user.nickname %>さんのMyページ！！
<br>

<% if current_user.present? %>
<div id="follow_form">
  <% unless current_user?(@user) %>
    <% if current_user.following?(@user) %>
      <%= render 'unfollow' %>
    <% else %>
      <%= render 'follow' %>
    <% end %>
  <% end %>

</div>
  <a href="<%= following_user_path(@user) %>">
    <%= @user.followings.count %>
  フォロー
  </a>
  <a href="<%= followers_user_path(@user) %>">
    <%= @user.followers.count %>
  フォロワー
  </a>
<br>
<% else %>
<div id="follow_form">
  <% unless current_artist?(@artist) %>
    <% if current_artist.artist_following?(@artist) %>
      <%= render 'unfollow' %>
    <% else %>
      <%= render 'follow' %>
    <% end %>
  <% end %>
</div>
  <a href="<%= follow_artist_path(@artist) %>">
    <%= @artist.artist_follow_ids.count %>
  フォロー
  </a>
  <a href="<%= followed_artist_path(@artist) %>">
    <%= @artist.artist_followed_ids.count %>
  フォロワー
  </a>
<br>
<% end %>

<%= render 'events/event-calender' %>